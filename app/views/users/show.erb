<% if @user.characters.count >= 1 %>
  <p> Here are <%= @user.name %>'s characters:
  <% @user.characters.each do |character| %>
    <p>LINK</p>
  <% end %>
<% else %>
  <p> <%= @user.name %> doesn't have any characters yet! </p>
<% end %>

<% if @user.parties.count >= 1 %>
  <p> These are <%= @user.name %>'s parties: </p>
  <% @user.parties.each do |party| %>
    <p>LINK</p>
  <% end %>
<% else %>
  <p> <%= @user.name %> isn't a member of any parties yet! </p>
<% end %>
