<% unless @message.nil? %>
  <%= @message %>
<% end %>

<h2>Create a new party!<h2>

<form action="/parties" method="post">
  <h4><label>Party Name:</label>
  <input type="text" name="name" required></h4>
  <h4><label>First party member:</label>
  <select name="character">
    <% @user.characters.each do |character| %>
      <option value="<%= character.id %>"><%= character.name %></option>
    <% end %>
  </select></h4>
  <input type="submit" value="Create">
</form>
